    "version": "0.2.0",
    "configurations": [
        {
            "name": "[MONO] Dev Server",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/mono/manage.py",
            "args": [
                "runserver",
                "127.0.0.42:8080"
            ],
            "django": true,
        },
        {
            "name": "[MONO] Process Background Tasks",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/mono/manage.py",
            "args": [
                "process_mono_tasks",
                "--dev",
            ],
            "django": true
        },
    ],
    "compounds": [
        {
            "name": "Server/Tasks",
            "configurations": [
                "[MONO] Process Background Tasks",
                "[MONO] Dev Server",
            ],
        }
    ]
}