    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mono Project",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/mono/manage.py",
            "args": [
                "runserver",
                "127.0.0.42:8080"
            ],
            "django": true
        },
        {
            "name": "createbudgets",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/mono/manage.py",
            "args": [
                "createbudgets"
            ],
            "django": true
        },
        {
            "name": "createtransactions",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/mono/manage.py",
            "args": [
                "createtransactions"
            ],
            "django": true
        },
        {
            "name": "Docker: Python - Django",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "django"
            },
            "dockerServerReadyAction": {
                "action": "openExternally",
                "pattern": "Starting development server at (https?://\\S+|[0-9]+)",
                "uriFormat": "%s://localhost:%s"
            }
        }
    ]
}