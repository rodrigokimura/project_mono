{
    "editor.rulers": [
        80,
        120
    ],
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./mono",
        "-p",
        "test*.py"
    ],
    "python.formatting.provider": "autopep8",
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.envFile": "${workspaceFolder}/.vscode/.env",
    "conventionalCommits.scopes": [
        "project_manager",
        "finance",
        "watcher",
        "mono",
        "restricted_area",
        "shipper",
        "notes",
        "accounts",
        "coder"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/venv": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
    }
}